[connection]
id=wifi-local
type=wifi
interface-name=wlan0
autoconnect-priority=-2
# always retry to connect
autoconnect-retries=0
# always retry to authenticate
auth-retries=0

[wifi]
# disable power management
powersave=2
mode=infrastructure
ssid=DOTPI

[wifi-security]
key-mgmt=wpa-psk
psk=supersecretpassword

[ipv4]
method=auto

[ipv6]
addr-gen-mode=default
method=link-local

[proxy]
